alias ls='lsd'
alias laf='lsd -AF --color=always | grep -v @$'
alias la='lsd -A'
alias lal='lsd -Al'
alias ll='lsd -l'
alias l='lsd -1'
alias lf='lsd -F --color=always | grep -v @$'
alias lr='lsd --tree'

alias cdp="cd ~/projects"
alias cdc="cd ~/.config"
alias cds="cd ~/scripts"
alias cdu="cd ~/utils"
alias cdr="cd ~/repos"
alias cdlr="cd ~/repos/Linux"
alias cdlrc="cd ~/repos/Linux/config"
alias cdhdd="cd /run/media/anthony/Internal\ HDD"
alias cdssd="cd /run/media/anthony/Windows\ SSD"

alias codehere="code . && exit"
alias autoc='~/utils/auto-compile.sh'
alias vim="nvim"
alias vimr="$BROWSER www.vimregex.com"
alias pdf="qpdfview"
alias svim="sudo nvim"

alias zshc="nvim ~/.zshrc"
alias vimc="nvim ~/.vimrc"
alias xmoc="nvim ~/repos/Linux/config/xmonad/xmonad.hs"
alias xmobc="nvim ~/repos/Linux/config/xmonad/xmobar.hs"
alias zshs="source ~/.zshrc"
alias nvimc="nvim ~/.config/nvim/init.vim"
alias redoom="~/.emacs.d/bin/doom sync"
alias rewm="~/utils/reinstall-wm.sh"

alias agit="~/utils/autogit.sh"
alias gs="git status"
alias lgit="cd ~/repos/Linux && agit && cd -"

alias killport="~/utils/killport.sh"
alias c="unset NEW_LINE_BEFORE_PROMPT && clear"
alias clear="unset NEW_LINE_BEFORE_PROMPT && clear"
alias p="sudo pacman -S"
alias syu="sudo pacman -Syu"
alias pp="pacman -Ss"
alias y="yay -S"
alias yy="yay -Ss"
alias setesc="setxkbmap -option caps:escape"
alias cleanpac="sudo pacman -Rns $(pacman -Qtdq)"

alias hdmi="xrandr --output HDMI-1-0 --auto"
alias hdmioff="xrandr --output HDMI-1-0 --off"
alias monfix="$HOME/scripts/threemonitorsetup.sh && exit"
